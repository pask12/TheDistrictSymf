{% extends 'base.html.twig' %}

{% block title %}the District : Contactez-nous !{% endblock %}

{% block body %}

<div class="container-fluid text-center"> 
    <div class="row mt-5">
        <div class="col-sm-8 mx-auto"> 
            <h1 class="title-page mt-5 mb-5 mx-5">Contactez-nous !</h1>
            {# <p>Le meilleur du fast food !!!</p> #}
        </div>
    </div>
   </div>

    {{ form_start(form) }}
    <div class="error text-center"> 
        {{form_errors(form)}}
    </div>

    <div class="container-fluid text-center"> 
        <div class="mt-5 mb-5">
            <div class="col-3 mx-auto"> 
                {{form_row(form.Nom,{
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>

        <div class="mt-5 mb-5">
            <div class="col-3 mx-auto"> 
                {{form_row(form.Prenom,{
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>

        <div class="mt-5 mb-5">
            <div class="col-3 mx-auto"> 
                {{form_row(form.Email,{
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>

        <div class="mt-5 mb-5">
            <div class="col-3 mx-auto"> 
                {{form_row(form.Telephone,{
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>

        <div class="mt-3 mb-5">
            <div class="col-3 mx-auto"> 
                {{form_row(form.Demande,{
                    'attr': {
                        'class': 'form-control '
                    }
                }) }}
            </div>
        </div>

        <div class="mt-5 mb-5 text-center"> 
            <button type="submit" class="btn btn-primary mb-5" style="width: 15rem; height: 3rem;">Envoyer le message</button>
        </div>
    </div>
    
    {{form_end(form)}}
{% endblock %}