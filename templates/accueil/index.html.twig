{% extends 'base.html.twig' %}
 {% block body %}
     <div class="container">
         <div class="row mt-5">
             <div class="col-sm-8 offset-sm-2">
                 <h1 class="title-page mt-5 mb-5 mx-5">The District Restaurant</h1>
                 {# <p>Le meilleur du fast food !!!</p> #}
             </div>
         </div>
     </div>
     <section class="video-search">
  <div class="d-flex justify-content-center ">
    <video  id="video" src="video/5794437-hd_1920_1080_25fps.mp4" autoplay loop muted> </video>
  </div>

                <h2 class="title-page mt-5 mx-5">Nos plats les plus vendus</h2>

 
<div class="container-fluid mt-5">
        <div class="row justify-content-center">
             
                 
                    {% for item in findByVentes %}
                       <div class="card col-10 col-md-5 col-lg-4 p-0 mx-3 mt-4 mb-5">
                            <div class="card-body mb-3 ">
                                <h1 class="card-title text-dark">{{ item.plat.libelle }}</h1>
                                
                                
                                <img class="card-img-top img-card" src="{{ asset('images/images_the_district/food/') }}{{ item.plat.image }}">
                                <p class="card-text text-dark mt-4">{{ item.plat.description }}</p>
                                <div class="text-center">
                                <p class="card-text text-dark mt-4">{{ item.plat.prix }} €</p>
                                <p>Quantité :  <input class="col-1"id="number"  name="number" type="number" value="1" min="1" max="50" /></p> 
                                
                                <p id="totalChamp">Total : {{ item.plat.prix }} €</p>
                                <a href="{{path('app_panier_add', {'id': item.plat.id})}}" class="envoi btn btn-primary mt-5">Ajouter au panier</a>
                                </div>
                            </div>
                        </div>  
                    {% endfor %}
            
        </div>
    
</div> 




 {% endblock %}
